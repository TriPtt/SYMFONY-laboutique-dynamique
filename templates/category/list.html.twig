{% extends 'base.html.twig' %}

{%block title %}Liste des produits de la catégorie
	{{ category.name }}
{% endblock %}

{% block body %}
	<div class="container max-w-screen-xl mx-auto px-4 py-8">
		<h1 class="text-2xl font-bold text-gray-800">Liste des produits de la catégorie
			{{ category.name }}</h1>
		<p class="text-gray-700">Ici je vous présente toutes la liste des
			{{ category.name }}, disponibles dans ma boutique</p>


		<div class="grid grid-cols-3 gap-4">
			{% for product in products %}
				<div class="w-full">
					<div class="bg-white rounded-lg shadow-lg p-5 h-full">
						<h2 class="text-gray-800 text-xl font-bold mb-5">{{ product.name }}</h2>
						<p class="text-gray-700 mb-5">{{ product.description }}</p>
						<a href="{{ path('product_detail', {'slug': product.slug}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded">Voir les détails</a>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}
