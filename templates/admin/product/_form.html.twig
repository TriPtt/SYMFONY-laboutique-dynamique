<div class="items-center border-b-2 py-2">
	<h1 class="text-3xl font-bold text-gray-900 pb-6">Informations du produit</h1>
	{{ form_start(productForm)}}
	{{ form_row(productForm.name) }}
	{{ form_row(productForm.description) }}
	{{ form_row(productForm.category) }}
	{{ form_row(productForm.price) }}
	{{ form_row(productForm.stock) }}
	<button type="submit" class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded">
		{{ button_label | default('Ajouter') }}
	</button>
	{{ form_end(productForm)}}
</div>
