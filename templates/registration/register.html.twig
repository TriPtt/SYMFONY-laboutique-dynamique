{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto px-4 py-8">
    <h1 class="text-5xl font-bold text-center text-gray-800 pb-10">S'inscrire</h1>

    {{ form_start(registrationForm) }}

        <div class="items-center border-b border-b-2 border-teal-500 py-2">
            <h1 class="">Informations personnelles</h1>
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.email) }}
        </div>

        <div class="items-center border-b border-b-2 border-teal-500 py-2">
            <h1>Coordonn√©es</h1>
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.zipcode) }}
            {{ form_row(registrationForm.city) }}
        </div>

        <div class="my-4 items-center">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.RGPDConsent) }}
        </div>

        <button type="submit" class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
